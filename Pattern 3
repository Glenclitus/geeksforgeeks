class Solution {
    void printTriangle(int n) {
        // Outer loop for number of rows
        for (int i = 1; i <= n; i++) {
            // Inner loop for printing numbers
            for (int j = 1; j <= i; j++) {
                System.out.print(j + " ");
            }
            // Move to next line after each row
            System.out.println();
        }
    }
}
